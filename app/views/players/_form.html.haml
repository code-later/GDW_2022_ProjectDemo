= form_with(model: player) do |form|
  - if player.errors.any?
    %article
      %bold
        = "#{player.errors.count} Fehler haben das Speichern verhindert!"
      %ul
        - player.errors.each do |error|
          %li= error.full_message
  %p
    = form.label :name
    = form.text_field :name
  %p
    = form.label :email
    = form.text_field :email
  %p
    = form.label :nickname
    = form.text_field :nickname
  %p
    = form.label :game_night_id
    = form.text_field :game_night_id

  = form.submit
